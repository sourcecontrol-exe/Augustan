# Augustan Trading Bot - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Binance API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Bybit API Keys  
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# Pi42 API Keys (if using Pi42 exchange)
PI42_API_KEY=your_pi42_api_key_here
PI42_API_SECRET=your_pi42_api_secret_here

# Environment Configuration
# Uncomment to force specific environment
# AUGUSTAN_ENV=testing
# AUGUSTAN_ENV=live

# Production Indicators (auto-detects live environment)
# PRODUCTION=true
# LIVE_TRADING=true
# DEPLOYMENT_ENV=production
